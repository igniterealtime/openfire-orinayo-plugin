{
	"manifest_version": 3,
	"name": "OrinAyo",  
	"short_name": "OrinAyo",
	"description": "The Live Music Producer",
	"version": "0.9.21",
	"homepage_url": "https://jus-be.github.io/orinayo/help.html",
	"background": {
		"service_worker": "./js/background.js"
	}, 
	"permissions": [		
		"background",	
		"storage",   
		"unlimitedStorage"
	],
	"options_ui": {
	"page": "index.html",
	"open_in_tab": true
	},		
	"action": {
      "default_icon": {
		"16": "assets/icon_16.png",
		"128": "assets/icon_128.png"
      }   
	},		
	"icons": {
		"16": "assets/icon_16.png",
		"128": "assets/icon_128.png"
	}
}
