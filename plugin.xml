<?xml version="1.0" encoding="UTF-8" ?>
<plugin>
    <author>Ignite Realtime</author>
    <class>org.ifsoft.orinayo.openfire.BroadcastBox</class>
    <name>${project.name}</name>
    <description>${project.description}</description>
    <version>${project.version}</version>
    <licenseType>Apache 2.0</licenseType>
    <date>2025-06-30</date>
    <minServerVersion>5.0.0</minServerVersion>

   <adminconsole>
        <tab id="sidebar-media-services">                                                                            
            <item id="orinayo-summary" name="${config.page.summary}" description="${config.page.summary.description}" url="orinayo-summary.jsp"/>
            <item id="orinayo-settings" name="${config.page.settings}" description="${config.page.settings.description}" url="orinayo-settings.jsp"/>			 			
        </tab>  
        <tab id="tab-webclients" name="${admin.sidebar.webclients.name}" description="${admin.sidebar.webclients.description}" url="orinayo-vchat.jsp">
            <sidebar id="tab-orinayo" name="${plugin.title}" description="${plugin.description}">
                <item id="orinayo-vchat"  name="${admin.sidebar.webclients.item.vchat.name}" description="${admin.sidebar.webclients.item.vchat.description}"  url="orinayo-vchat.jsp"/>				
             </sidebar>
        </tab>		
    </adminconsole> 
</plugin>
